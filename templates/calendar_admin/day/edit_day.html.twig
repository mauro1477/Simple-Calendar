{% extends 'content_base.html.twig' %}
{% block content_body %}
    <div class="container" style="background:#F0F0F0;padding-right:40px;padding-left:40px;padding-top:50px">
        <h1>Edit Day</h1>
            <hr>
            <div class="row">
                <div class="col-sm-8">
                    <h3>Details</h3>
                    {{ include('calendar_admin/day/_form_day.html.twig', {
