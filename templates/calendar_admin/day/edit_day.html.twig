                    }) }}
                </div>
                <div class="col-sm-4">
                    <h3>Files</h3>
                    <ul class="list-group small">
                        <ul class="list-group small js-reference-list" data-url="{{ path('admin_day_list_days_pdf', {id: day.id}) }}"></ul>
