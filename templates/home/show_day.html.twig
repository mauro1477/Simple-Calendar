{% extends 'base.html.twig' %}
{% block body %}
    {#    {% block title %}{{ day.title }}{% endblock %}#}
    <div class="container" style="background:#F0F0F0;padding-right:50px;padding-left:50px;padding-top:50px;padding-bottom: 100px;">
        <h1>Details</h1>
        <hr>
        <div class="row">
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Day title:</h5>
                        <div class="show-article-title-container d-inline-block pl-3 align-middle">
                            <span class="show-article-title ">{{ day.title }}</span>
                            <br>
                        </div>
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-sm-8">
                        <div class="row">
                            <div class="col-sm-12">
                                <h5>Daily Notes</h5>
                                <div class="article-text">
                                    {{ day.content }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-4">
                <h3>Files</h3>
                <ul class="list-group small">
                    <ul class="list-group small js-reference-show" data-url="{{ path('admin_day_list_days_pdf', {id: day.id}) }}"></ul>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin_calendar_form') }}
{#    {% if app.environment != 'test' %}{{ encore_entry_link_tags('admin_calendar_form') }}{% endif %}#}

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show_form') }}
{#    {% if app.environment != 'test' %}{{ encore_entry_script_tags('show_form') }}{% endif %}#}

{% endblock %}
